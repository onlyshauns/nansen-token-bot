# Telegram bot (required): Create via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Nansen API key (optional here â€” users set their own via /setkey in Telegram)
# Only needed if you also want to run the Discord bot
